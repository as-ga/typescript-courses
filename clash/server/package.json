{
  "name": "clash-server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "watch": "tsc -w",
    "build": "concurrently \"tsc\" \"npm run copy-files\" ",
    "server": "nodemon ./dist/index.js",
    "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\"",
    "copy-files": "copyfiles -u 1 \"views/**/*\" dist/",
    "watch-views": "nodemon --watch views -e ejs -x \"npm run copy-files\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/as-ga/typescript-courses.git#main"
  },
  "keywords": [
    "typescript"
  ],
  "author": "Ashutosh Gaurav",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/as-ga/typescript-courses/issues"
  },
  "homepage": "https://github.com/as-ga/typescript-courses/tree/main#readme",
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "nodemailer": "^6.9.14",
    "prisma": "^5.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.15",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
  }
}
